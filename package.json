	"main": "./src/bin/www.ts",
	"scripts": {
		"test": "SET NODE_ENV=development & mocha -r ts-node/register test/**/*.test.ts",
		"lint": "eslint */**/*.{js,ts,tsx} --quiet --fix",
		"prepare": "husky install",
		"clean": "rimraf ./build/* && rimraf ./logs/*",
		"build": " npm run clean npm run lint && webpack",
		"start:dev": "SET NODE_ENV=development& npm run build",
		"run:dev": "ts-node-dev --respawn --transpile-only ./src/bin/www.ts",
		"start:prod": "SET NODE_ENV=production  & npm run build",
		"run:prod": "pm2 start ./config/pm2/pm2-prod-process.config.js",
		"monitor": "pm2 monit",
		"logs": "pm2 logs api-rest --lines 2000",
		"stop": "pm2 delete api-rest && npm run clean",
		"dev:debug": "SET NODE_ENV=development & ts-node-dev --transpile-only --respawn --inspect=4321 --project tsconfig.json ./src/bin/www.ts"
	},
